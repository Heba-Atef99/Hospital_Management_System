@model Ain_Shams_Hospital.ViewModels.LogoutVM
@{ 
    var controller = @ViewContext.RouteData.Values["Controller"].ToString();

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Doctor</title>
    <link rel="icon" href="~/logo.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link href="~/css/doctor.css" rel="stylesheet" />
</head>
<body id="doctor">
    <header>
        <div style="background-color:#e7e7e7" class="container-fluid">
            <div class="row">
                <div class="container">
                    <div class="col-sm-9 float-left"><img id="Headimg" src="~/Images/ASH 4.png" height="66" /></div>
                    <p class="float-right" style="margin-right:20px;margin-top:5px;color:#0094ff;font-size:30px;font-weight:bold">19056</p>
                </div>

            </div>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Doctor" asp-action="Main">Home</a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-danger w-auto text-center float-left" href="Emergency" role="button">Emergency</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <form asp-controller="Registration" asp-action="Logout">
                                <button name="logout" type="submit" value="out" class="btn btn-dark mr-3">Log out</button>
                            </form>
                        </li>
                    </ul>

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Doctor" asp-action="Schedule">My Schedules</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Doctor" asp-action="Profile">Profile</a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <main class="container pb-3" role="main">
        @RenderBody()
    </main>


    <footer class="border-top footer">
        <div class="text-center">
            &copy; 2020 - Ain Shams Hospital - Since 1980
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
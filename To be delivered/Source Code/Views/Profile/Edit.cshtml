@model Ain_Shams_Hospital.Data.Entities.Patient

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <h1 class="text-center" style="color:#0708bc" ;font-family: Dancing Script" , cursive>Edit Your Profile</h1>
    <hr />
    <div class="row">
        <div class="col-md-10" style="margin:auto;">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label" style="color:#0026ff"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label" style="color:#0026ff"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Medical_Record" class="control-label" style="color:#0026ff"></label>
                    <input asp-for="Medical_Record" class="form-control" />
                    <span asp-validation-for="Medical_Record" class="text-danger"></span>
                </div>
                <h2 class="text-center mb-3 mt-5" style="color:#5176e3">Your Progress</h2>
               
                <div class="form-group">
                    <div class="form-group" style="display:none;">
                        @Html.LabelFor(model => model.Health_Progress, new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Health_Progress, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        </div>
                        <div class="progress mb-5 mt-2" style="height: 34px;">
                            <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style=" width: @ViewBag.pr%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <h2 class="text-center mb-3" style="color:#5176e3">Your Current Hospital</h2>
                        <div class="text-center h3 mb-5">@ViewBag.hos</div>
                        <div class="form-group" style="display:none">
                            @Html.LabelFor(model => model.Hospital_Id, new { @class = "control-label" })
                            <h6 style="color:#aaa6a6;font-size:small;font-size:15px">"If You are Transfered To Another Hospital This Id will Change"</h6>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Hospital_Id, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group" style="display:none">
                            @Html.LabelFor(model => model.Id, new { @class = "control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group" style="display:none">
                            @Html.LabelFor(model => model.Registration_Id, new { @class = "control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Registration_Id, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="SaveChanges" class="btn btn-primary" />
                    </div>
</form>
        </div>
    </div>

    <div class="mt-5">
        <a asp-action="UserProfile">Back</a>
    </div>
</div>

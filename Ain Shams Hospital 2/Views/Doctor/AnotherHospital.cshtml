@model Ain_Shams_Hospital.ViewModels.DoctorVM.TransferAnotherHospitalVM

@{
    //ViewData["Title"] = "AnotherHospital";
    var Transfer_Hospitals = ViewBag.Transfer_Hospitals;
}

<h1>Transfer this patient to:</h1>

@*<h4>TransferAnotherHospitalVM</h4>*@
<hr />
<div class="row">
    
        <div class="col-md-4">
            <form asp-action="AnotherHospital" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @*<label asp-for="HospitalId" class="control-label"></label>*@
                    <select asp-for="HospitalId" class="form-control">
                        <option selected disabled hidden>select a hospital</option>
                        @foreach (var p in Transfer_Hospitals)
                        {
                        <option value="@p.Id"> @p.Name</option>
                        }
                    </select>
                    <span asp-validation-for="HospitalId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

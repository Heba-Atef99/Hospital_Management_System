@page
@model Ain_Shams_Hospital.ViewModels.DoctorVM.PatientFollowUpVM
@{
    var patientData = ViewBag.data1;
}

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="col-md-9 offset-md-2">
    @foreach (var p in patientData)
    {
    <div class="card card-body">

        <h1>Patient personal informations </h1>
        <hr />
        <h3>name :@p.Name</h3>
        <hr />
        <h3>Health_Progress :@p.Health_Progress</h3>
        <hr />
        <h3>phone :@p.Phone</h3>
        <hr />
        <h3>mail :@ViewBag.data3</h3>
        <hr />
        <h3>status :@ViewBag.status</h3>
    </div>

        <div class="card card-body">
            <h1>Patient Medical_Record </h1>
            <hr />
            <h3>@p.Medical_Record</h3>
        </div>
        <form asp-action="PatientFollowUp" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label name="Medical_Record">Add Medical_Record:</label>
                <textarea name="Medical_Record" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <input type="submit" value="edit Medical_Record" class="btn btn-primary" />

            </div>
        </form>
        <form asp-action="PatientFollowUp" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label name="Health_Progress">Add Health_Progress:</label>
                <input type="range" id="send" oninput="result.value=send.value" name="Health_Progress" class="form-control">
                <br>
                <input type="text" id="result" value="@p.Health_Progress" class="form-control">
            </div>

            <div class="form-group">
                <input type="submit" value="edit Health_Progress" class="btn btn-primary" />

            </div>
        </form>
        <form asp-action="PatientFollowUp" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label name="Status" for="status">Add Status:</label>
                <br>
                <select id="status" name="Status">
                    <option value="binding">binding</option>
                    <option value="inprograss">inprograss</option>
                    <option value="finish">finish</option>


                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="edit Status" class="btn btn-primary" />

            </div>
        </form>
        <form class="card card-body">
            <h2 class="text-center">If you need to trasfer patient. </h2>
            <hr />
            <a class="btn btn-dark w-auto text-center" href="Transfer" role="button">Transfer</a>
        </form>
    }
</div>
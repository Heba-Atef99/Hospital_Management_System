@{  
    var controller = @ViewContext.RouteData.Values["Controller"].ToString();
    //string layout = "";

    switch (controller)
    {
        case "Doctor":
            Layout = "~/Views/Shared/_DoctorLayout.cshtml";
            break;

        case "Patient":
            Layout = "~/Views/Shared/_PatientLayout.cshtml";
            break;

        default:
            //Admin layout  
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }
}  
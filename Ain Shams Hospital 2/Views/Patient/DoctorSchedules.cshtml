@model Ain_Shams_Hospital.ViewModels.DoctorSchedule
@{
    ViewData["Title"] = "DoctorSchedules";
}
<div class="container mt-5">

    <h1 class="mt-5">Hello! <span style="font-size :34px;" class="text-danger">@ViewBag.patientname</span></h1>
    <h2>  Doctor Schedule </h2>


    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="DoctorSchedules">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" for="selectdoctors">Show Your Doctors list</label>
                    <select class="form-control" asp-for="Id" asp-items="@(new SelectList(@ViewBag.massege3 ,"Id","Name"))">
                    </select>
                </div>

            </form>
        </div>
    </div>

    <div>
        <a asp-action="Home">Back</a>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>
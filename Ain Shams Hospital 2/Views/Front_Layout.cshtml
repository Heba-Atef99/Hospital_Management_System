<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


    <link href="~/css/Front_Layout.css" rel="stylesheet" />

    <link href="~/css/Home.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div style="background-color:#e7e7e7" class="container-fluid">
            <div class="row">
                <div class="container">
                    <div class="col-sm-9 float-left">
                        <img id="Headimg" src="~/Images/ASH 4.png" height="66" />
                    </div>
                    <p class="float-right" style="margin-right:20px;margin-top:5px;color:#0094ff;font-size:30px;font-weight:bold">
                        19056
                    </p>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div>

                    <ul class="nav nav-tabs ">



                        <li class="nav-item ">
                            <a href="/Front_desk/Homepage" class="nav-link ">Main</a>
                        </li>
                        <li class="nav-item ">
                            <a href="/Front_desk/Cancel" class="nav-link ">Cancel Reservation</a>
                        </li>
                        <li class="nav-item ">
                            <a href="/Front_desk/RoomInfo" class="nav-link ">Rooms Info</a>
                        </li>
                        <li class="nav-item active ">
                            <a href="/Front_desk/Search" class="nav-link ">Search</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Front_desk/Check" class="nav-link ">Check Availability/Reserve Room</a>
                        </li>
                       
                    </ul>
                </div>

            </div>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-sm-column">
                    <li class="nav-item">
                        <form asp-controller="Registration" asp-action="Logout">
                            <button name="logout" type="submit" value="out" class="btn btn-dark">Log out</button>
                        </form>
                    </li>
                </ul>
            </div>

        </nav>

    </header>
    @*<div id="watermarkcont">
          <img id="watermark"src="~/Images/ASH B.png" />
        </div>*@
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted" style="background-color:#6da6cf">
        <div class="text-center">
            &copy; 2020 - Ain Shams Hospital - Since 1980
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

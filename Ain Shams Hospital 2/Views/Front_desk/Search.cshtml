@model AinShamsHospital.ViewModels.SearchVm

@{
    ViewData["Title"] = "Search";
}
@{
    Layout = "~/Views/Front_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="patientName" class="control-label"></label>
                <input asp-for="patientName" class="form-control" />
                <span asp-validation-for="patientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Today" class="control-label"></label>
                <input asp-for="Today" class="form-control" />
                <span asp-validation-for="Today" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="text-danger">@ViewBag.NOT</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

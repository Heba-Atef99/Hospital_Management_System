@model Ain_Shams_University.ViewModels.DonationsVM

@{
    ViewData["Title"] = "Donation";
   
}

<div class="container mb-5 mt-5">
    <h1>Donation Form</h1>
    <form asp-action="Donation">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Name</label>
            <input asp-for="Name" id="name" class="null card-image form-control" type="text">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" id="email" class="null card-image form-control" type="text">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label">PhoneNumber</label>
            <input asp-for="PhoneNumber" class="null card-image form-control" type="text">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="expiry-date-group form-group">
            <label asp-for="Day">Choose Day</label>
            <input asp-for="Day" id="dateInput" class="form-control" type="date">
            <span asp-validation-for="Day" class="text-danger"></span>
        </div>
        <div class="card card-body">
            <input href="Home/saveDonation" type="submit" value="Send" class="btn btn-primary" />
        </div>
    </form>
    <div class="card card-body">
        <a class="btn btn-dark" href="/Home" role="button">Back</a>
        
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>
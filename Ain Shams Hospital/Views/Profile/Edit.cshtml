@model Ain_Shams_Hospital.Data.Entities.Patient

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center text-danger"  >Your Health Progress</h1>
<hr />
<div class="row">
    <div class="col-md-10" style="margin:auto;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none;">
                @Html.LabelFor(model => model.Id, new { @class = "control-label" })
                <div class="col-md-10">
                @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group" style="display:none;">
                @Html.LabelFor(model => model.Registration_Id, new { @class = "control-label" })
                <div class="col-md-10">
                @Html.TextBoxFor(model => model.Registration_Id, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group" style="display:none;">
                @Html.LabelFor(model => model.Hospital_Id, new { @class = "control-label" })
                <div class="col-md-10">
                @Html.TextBoxFor(model => model.Hospital_Id, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Health_Progress, new { @class = "control-label" })
                <div class="col-md-10">
                @Html.TextBoxFor(model => model.Health_Progress, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <h2 class="text-center" style="color:#0708bc">Edit Your Information</h2>
                <div class="form-group">
                    <label asp-for="Name" class="control-label" style="color:#0026ff"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label" style="color:#0026ff"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Medical_Record" class="control-label"style="color:#0026ff"></label>
                    <input asp-for="Medical_Record" class="form-control" />
                    <span asp-validation-for="Medical_Record" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


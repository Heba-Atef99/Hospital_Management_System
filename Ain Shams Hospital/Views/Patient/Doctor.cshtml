@model Ain_Shams_University.ViewModels.DoctorVM

@{
    ViewData["Title"] = "Doctor";
}

<div class="container">
    <h1>Doctor</h1>


    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Doctor">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DoctorName" for="doctors">Choose A Doctor</label>
                    <select class="form-control" asp-for="Id" id="disablefirst" asp-items="@(new SelectList(@ViewBag.massege ,"Id","Name"))" >
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" id="dateInput" type="datetime-local" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MedicalRecord" for="record">Please Enter Your Medical Record</label>
                    <textarea asp-for="MedicalRecord" class="form-control" id="record" rows="5" placeholder="eg: What medications do you take at home?
What is each medicine for?
What is the dose?"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Pay" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="SelectDoctor">Back</a>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>
@{
}
@model Ain_Shams_Hospital.Models.Account
@using Ain_Shams_Hospital.Models;
<div class="container">
    <p class="pb-3 pt-4"><b style="font-size:30px;">Eyes Doctor</b></p>
    <form>

        <div class="form-group">
            <label for="doctors">Choose A Doctor</label>
            <select class="form-control" asp-for="Id" asp-items="@(new SelectList(@ViewBag.massege ,"Id","Name"))">
            </select>
        </div>


        <div class="form-group">
            <label for="date">Choose A Date</label>
            <select class="form-control" id="date">
                <option>Tuesday 11:am</option>
                <option>Tuesday 1:am</option>
                <option>Tuesday 3:am</option>
            </select>
        </div>

        <div class="form-group">
            <label for="comments">Any Comments</label>
            <textarea class="form-control" id="comments" rows="3"></textarea>
        </div>
    </form>
</div>
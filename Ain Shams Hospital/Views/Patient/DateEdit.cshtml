@model Ain_Shams_University.ViewModels.DateEditePTVM

@{
    ViewData["Title"] = "DateEdit";
    Layout = "_PatientLayout";
}

<h1 class="col-auto" style="color:#0026ff">Your Are Transfered To another Doctor !</h1>


<div class="container mt-5">
    <hr />
    <div class="row">
        <div class="col-md-10">
            <h4  style="color:#ff0000">Please Reset Your Checking Date</h4>
            <form method="post" asp-action="DateEdit">


                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="DateEdite" class="control-label">Edit The Date</label>
                            <input asp-for="DateEdite" class="form-control" id="ExpiryDate" type="date" />
                            <span asp-validation-for="DateEdite" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Hour" class=" control-label"></label>
                            <input asp-for="Hour" class="form-control example" type="text" />
                            <span asp-validation-for="Hour" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="FollowedDoctors">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</div>
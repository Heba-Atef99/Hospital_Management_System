<section class="superdoctors" >
   
    <div class="doctors pt-5">
        <div class="container-fluid">
            <h2 class="h1 text-white text-center" style="font-family: Dancing Script", cursive;">Pick A Doctor</h2>
            <hr>
            <div class="row text-center">


                
                <div class="card-group p-5">
                    
                    <div class="col-lg-3 col-sm-6 ">
                        <a asp-action="labSpecialist" asp-controller="Patient" role="button">
                            <div class="card shadow mt-3">

                                <img class="card-img-top" src="~/images/lab.jpg" alt="lab">
